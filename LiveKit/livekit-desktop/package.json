{
  "name": "livekit-desktop",
  "version": "1.0.7",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "npm run test:all",
    "test:watch": "vitest",
    "test:ci": "vitest run",
    "test:e2e": "node e2e/run-full.cjs",
    "test:e2e:live": "node e2e/run-live.cjs",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:e2e:smoke": "node e2e/run-smoke.cjs"
  },
  "dependencies": {
    "electron-updater": "^6.3.0",
    "livekit-client": "^2.16.1"
  },
  "description": "",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "jsdom": "^24.0.0",
    "vitest": "^1.6.0"
  },
  "build": {
    "appId": "com.thecord.app",
    "productName": "The Cord",
    "artifactName": "The.Cord.Setup.${version}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "generic",
      "url": "https://github.com/Nova849/the-cord-app/releases/latest/download/"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
